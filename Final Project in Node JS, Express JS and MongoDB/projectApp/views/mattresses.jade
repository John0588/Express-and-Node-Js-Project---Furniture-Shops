extends layout

block content
  main
      h1#mattresses.fca MATTRESSES
    .container
      .productcont
        .product
          h3.productname Mattresses 1
          img(src='./images/mattress1.jpg' alt='')
          p.sale NEW ITEM
          p.price $100
          button.addtocart Add To Cart
        .product
          h3.productname Mattresses 2
          img(src='./images/mattress2.jpg' alt='')
          p.sale HOT SALE
          p.price $250
          button.addtocart Add To Cart
        .product
          h3.productname Mattresses 3
          img(src='./images/mattress3.jpg' alt='')
          p.sale ON SALE
          p.price $400
          button.addtocart Add To Cart
    .cart-container
      h2#cart Cart
      #alerts
      table
        thead
          tr
            th
              strong Product
            th
              strong Price
        tbody#carttable
      hr
      table#carttotals
        tbody
          tr
            td
              strong Items
            td
              strong Total
          tr
            td
              | x 
              span#itemsquantity 0
            td
              | $
              span#total 0
      .cart-buttons
        button#emptycart Empty Cart
        button#checkout Checkout
        